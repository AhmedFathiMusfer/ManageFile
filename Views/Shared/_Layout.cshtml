<!DOCTYPE html>
<html lang="ar" dir="rtl">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/static/bootstrap.min.css" rel="stylesheet">
    <link href="~/static/styles.css" rel="stylesheet">
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light">
        <a class="navbar-brand text-white" href="{% url 'upload_file' %}"> الرئيسية</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="التبديل التنقل">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link text-white" href="{% url 'file_operations_form' %}"> عمليات الملف </a>
                </li>
                <!-- Add other links here -->
            </ul>
        </div>
    </nav>

    <script>
        function validate_file() {
            document.querySelector("form").addEventListener("submit", function (e) {
                const inputFile = document.querySelector("input[type='file']");
                const file = inputFile.files[0];
                const fileType = file.type;
                const fileName = file.name;

                if (!fileName.endsWith(".txt") || fileType !== "text/plain") {
                    alert("نوع الملف غير صالح. يرجى رفع ملف بصيغة .txt.");
                    e.preventDefault();
                    return;
                }
            });
        }
    </script>
    <!-- Page Content -->
    <div class="container mt-5">
    </div>
    @RenderBody()
    <script src="~/static/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
